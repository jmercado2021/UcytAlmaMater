<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @*Neccesarios para Exportar Js*@
    <script src="~/assets/js/popper.min.js"></script>
    <link href="~/assets/Exportar Js/tableexport.css" rel="stylesheet" />

    <link href="~/Content/DynaTables/jquery.dynatable.css" rel="stylesheet" />
    <script src="~/Content/DynaTables/jquery.dynatable.js"></script>

   
</head>

<div class="row">

    <div class="col-md-12">

       @* <input id="buscar" type="text" class="form-control" placeholder="Escriba algo para filtrar" />*@
        <table class="table table-striped table-bordered table-hover dt-responsive" id="sys-table" cellspacing="0">
            <thead>
                <tr>

                    <th>Codigo</th>
                    <th>Descripcion</th>
                    <th>Tipo</th>



                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {

                    <tr>
                        @*<td class="numero">@Html.DisplayFor(modelItem => item.Id)</td>*@
                        <td class="numero">@Html.DisplayFor(modelItem => item.Articulo_Id)</td>
                        <td class="numero">@Html.DisplayFor(modelItem => item.ArticuloNombre)</td>
                        <td class="numero">@Html.DisplayFor(modelItem => item.Sustituto_Tipo)</td>
                        @*<td>

                            @Html.ActionLink("Asociar", "DetallarArticulo", new { Articulo_Id = item.Articulo_Id }) |
                        </td>*@
                        @*<td>

                            @Html.ActionLink("Details", "DetallarArticulo", new { Codigo = item.Codigo }) |

                        </td>*@


                    </tr>
                }

            </tbody>
        </table>


    </div>
</div>

<script>


        document.querySelector("#buscar").onkeyup = function () {
            $TableFilter("#sys-table", this.value);
        }

        $TableFilter = function (id, value) {
            var rows = document.querySelectorAll(id + ' tbody tr');

            for (var i = 0; i < rows.length; i++) {
                var showRow = false;

                var row = rows[i];
                row.style.display = 'none';

                for (var x = 0; x < row.childElementCount; x++) {
                    if (row.children[x].textContent.toLowerCase().indexOf(value.toLowerCase().trim()) > -1) {
                        showRow = true;
                        break;
                    }
                }

                if (showRow) {
                    row.style.display = null;
                }
            }
        }


</script>
