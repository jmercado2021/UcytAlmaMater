                                    <div class="col-md-6 col-sm-2 col-md-2 hop">
                                        <input name="ArticuloVentaBajoCosto" type="checkbox" data-off-text="NO" data-on-color="success" data-on-text="SI" checked="checked" class="BSswitch switch-small">
                                    </div>
                                </div>

                            </div>

