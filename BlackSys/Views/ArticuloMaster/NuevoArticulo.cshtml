                                        <input type="hidden" name="CodAuto" id="CodAuto" placeholder="Recibe contenido" class="form-control" hidden>
                                        <button type="button" class="btn btn-secondary" onclick="GenerarCodigo()">Codigo Auto</button>
                                    </div>
                                </div>

                                <div class="col-md-2">
                                    <span></span>
                                    <br />
                                    <div class="col-md-6 col-sm-2 col-md-2 hop">


                                        <button type="button" class="btn btn-secondary" onclick="CodigoManual()">Codigo Manual</button>
                                    </div>
                                </div>


                            </div>
                            <br />
