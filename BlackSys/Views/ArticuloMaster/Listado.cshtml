<div class="loader"></div>
@model List < BlackSys.Models.W_ListarArticulosIndex_Result>
@{
    ViewBag.Title = "Listado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>
    <a class="btn btn-circle btn-primary" href=/ArticuloMaster/NuevoArticulo><i class="fa fa-plus-square"></i> Agregar Nuevo</a>
    <button class="btn btn-circle btn-primary" onclick="exportTableToExcel('sys-table')">Exportar Excel</button>
</p>
<div class="row">


    <div class="col-md-12">


        <div class="form-group">
            @*<label class="control-label" for="Nombre">Seleecione el Vendedor a consultar</label>*@
            <h4>Escriba el nombre del articulo</h4>
            @*<button></button>*@
            <input id="buscar" type="text" class="form-control" placeholder="Escriba algo para filtrar" />
            <div class="help-block with-errors"></div>
            <span id="span1"></span>
        </div>
    </div>
</div>



<div id="partial">

    @Html.Partial("ParcialListado")


</div>


<script>
    var input = document.getElementById("buscar");
input.addEventListener("keyup", function(event) {
  if (event.keyCode === 13) {
   event.preventDefault();
   CargarParcial();
  }
});
</script>



<script>
    function CargarParcial() {
        alertify.notify('Cargando', 'success', 1, null);
        var Nombre = $("#buscar").val();
        $("#partial").load('@(Url.Action("ParcialListado", "ArticuloMaster", null, Request.Url.Scheme))?Nombre=' + Nombre);

             };        
</script>
<style>
    .loader {
        position: fixed;
        left: 0px;
        top: 0px;
        width: 100%;
        height: 100%;
        z-index: 9999;
        background: url('images/pageLoader.gif') 50% 50% no-repeat rgb(249,249,249);
        opacity: .8;
    }
</style>

<script type="text/javascript">
$(window).load(function() {
    $(".loader").fadeOut("slow");
});
</script>
