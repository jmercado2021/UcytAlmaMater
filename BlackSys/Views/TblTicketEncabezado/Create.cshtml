    <script type="text/javascript">
    $(document).ready(function () {
 
        $("[id$=ddlTipoProb]").change(function () {
        //$("#ddlTipoProb").change(function () {
            var StateID = $(this).val();
            var select = $("#ddlSubTipo");
            if (StateID != 0) {
                $.getJSON("LoadSubTipoProb", { StateID: StateID },
                    function (CitiesData) {
                        select.removeAttr('disabled');
                        select.empty();
                        select.append($('<option/>', { value: 0, text: "-- Selecione el Sub Tipo--" }));

                        $.each(CitiesData, function (index, itemData) {
                            select.append($('<option/>',
                                {
                                    value: itemData.Value,
                                    text: itemData.Text
                                }));
                        });
                    });
            }
            else {
                select.attr('disabled', 'disabled');
                select.val(0);
            }
        });

    });
    </script>



