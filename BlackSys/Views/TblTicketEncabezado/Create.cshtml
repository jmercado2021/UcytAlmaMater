<script>
$( document ).ready(function() {

    var now = new Date();

    var day = ("0" + now.getDate()).slice(-2);
    var month = ("0" + (now.getMonth() + 1)).slice(-2);
    var Hora = ("0" + (now.getHours())).slice(-2);
    var Minuto = ("0" + (now.getMinutes())).slice(-2);
    var Segundos = ("0" + (now.getSeconds())).slice(-2);

    var today = now.getFullYear() + "-" + (month) + "-" + (day) + " " + (Hora) + ":" + (Minuto) + ":" + (Segundos);
    $("#FechaTicketInicio").val(today);
    $("#FechaTicketModificado").val(today);
    $("#FechaTicketModificado").val(today);
    
});
</script>


