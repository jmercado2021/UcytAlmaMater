
@model List<MiPrimerProyectoMVC.Model.EntityMuestraComentariosTiket_Result>

@{
    ViewBag.Title = "ComentariosTiket";
    Layout = "~/Views/Shared/_AdminLte.cshtml";
    var  TiketId =0;
}

<br />


<!-- /.tab-pane -->
@foreach (var item in Model)
{
    TiketId = item.NTicket;

    <div class="tab-pane" id="timeline">
        <!-- The timeline -->

        <ul class="timeline timeline-inverse">
            <!-- timeline time label -->
            <li class="time-label">
                <span class="bg-red">
                    @Html.DisplayFor(modelItem => item.FechaModifica)
                </span>
            </li>
            <!-- /.timeline-label -->
            <!-- timeline item -->




            <li>

                <i class="fa fa-comments bg-yellow"></i>



                <div class="timeline-item">
                    <span class="time"><i class="fa fa-clock-o"></i>@Html.DisplayFor(modelItem => item.FechaModifica)</span>

                    <h3 class="timeline-header"><a href="#">@Html.DisplayFor(modelItem => item.Operador)</a></h3>

                    <div class="timeline-body">
                        @Html.DisplayFor(modelItem => item.TicketComentarios)
                    </div>
                   

                    @*@if (Model != null && !String.IsNullOrEmpty(item.TblArchivoFoto))*@

                        @if (item.TblArchivoFoto != null)
                        {
                            <div class="timeline-body">

                                <img src='@Url.Action("RetrieveImage", "TblTicketEncabezado", new { NTicket = item.NTicket, TicketId = item.TicketId})' alt="" height=600 width=1100/>
                                @*<img src="http://placehold.it/150x100" alt="..." class="margin">
                                <img src="http://placehold.it/150x100" alt="..." class="margin">
                                 <img src="http://placehold.it/150x100" alt="..." class="margin">*@
                            </div>
        }


    @*<div class="timeline-footer">
            <a class="btn btn-primary btn-xs">Read more</a>
            <a class="btn btn-danger btn-xs">Delete</a>
        </div>*@
                </div>

            </li>

          


        </ul>



    </div>
}
<!-- /.tab-pane -->

@using (Html.BeginForm("NuevoComentario", "TblTicketEncabezado", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="text" name="Id" value="@TiketId"  style="visibility:hidden" />
    @*<input type="text" name="Id" value="@TiketId"/>*@

    <div class="box" style="width:auto">
        <div class="box-header ">
            <h3 class="box-title timeline-header">               
                <a href="#">@ViewBag.UsuarioNombre</a>
                <small></small>
            </h3>
            <!-- tools box -->
            <div class="pull-right box-tools">
                <button type="button" class="btn btn-default btn-sm" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-default btn-sm" data-widget="remove" data-toggle="tooltip"
                        title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
            <!-- /. tools -->
        </div>
        <!-- /.box-header -->
        <div class="box-body pad">

            <textarea name="comentario" class="textarea" placeholder="Escriba...."
                      style="width: 100%; height: 100px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>

        </div>
        <div class="form-group">
            <label for="exampleInputFile">Subir imagen</label>
            <input type="file" name="file">

            @*<p class="help-block">Esta imagen se</p>*@
        </div>

    </div>
    <div class="form-group">
        <input type="submit"  id="accion" value="Comentar"  class="btn btn-primary"/>
        @Html.ActionLink("Regresar", "Index", new { @class = "btn btn-info" })

        @*<p class="help-block">Esta imagen se</p>*@
    </div>

}


<script>
    $(document).ready(function() {

        $("#accion").click(function () {
            alertify.success("Ticket Actualizado");

        });
    });
</script>
