                                                }
                                            </ul>
                                        </li>
                                    </ul>
                                </li>



                            </ul>

                        </div>
                    </div>
                </div>




                <div class="row col-md-6">
                    <h3>Seleccione la Sucursal de Destino</h3>
                    <div class="row">
                        <div class="col-6">


                        </div>
                        <div class="col-6">
                            <input id="bstree-data2" type="hidden" name="bstree-data" data-ancestors="ALS:IDF">
                            <div id="mytree2" class="bstree">
                                <ul>
                                    <li data-id="root" data-level="0">
                                        <span>Super Farmacias Xolotlan</span>
                                        <ul>
                                            <li data-id="ACL" data-level="1">
                                                <span>Sucursales</span>
                                                <ul>
                                                    @foreach (var item in Model)
                                                    {
                                                        @*<span class="text">@Html.DisplayFor(modelItem => item.OperadorNombre)           </span>*@
                                                        <li data-id="@item.Suc_Id" data-level="2"><span>@item.Suc_Nombre</span></li>

                                                    }
                                                </ul>
                                            </li>
                                        </ul>
                                    </li>

                                </ul>

                            </div>
                        </div>
                    </div>
                </div>


            </div>


        </div>



        <script src="~/assets/js/popper.min.js"></script>
        <script src="~/assets/js/jquery.bstree.js"></script>
        <script src="~/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>




        <input type="hidden" name="IdSucursalOrigen" id="IdSucursalOrigen" placeholder="Recibe contenido" class="form-control">
        <input type="hidden" name="IdSucursalDestino" id="IdSucursalDestino" placeholder="Recibe contenido" class="form-control" hidden>





    </form>





    <script>
        $('document').ready(function () {
            $hiddenInput = $('#bstree-data')
            $('#mytree').bstree({
                dataSource: $hiddenInput,
                initValues: $hiddenInput.data('ancestors'),
                onDataPush: function (values) {
                    var def = '<strong class="pull-left">Values:&nbsp;</strong>'
                    for (var i in values) {
                        def += '<span class="pull-left">' + values[i] + '&nbsp;</span>'
                    }
                    $('#status').html(def),

                    document.getElementById('IdSucursalOrigen').value = values
                },
                updateNodeTitle: function (node, title) {
                    return '[' + node.attr('data-id') + '] ' + title + ' (' + node.attr('data-level') + ')'
                }
            })
        })
    </script>

    @*--scrip para el arbol Casas*@
    <script>
        $('document').ready(function () {
            $hiddenInput = $('#bstree-data2')
            $('#mytree2').bstree({
                dataSource: $hiddenInput,
