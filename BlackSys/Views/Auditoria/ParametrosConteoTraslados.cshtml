                        def += '<span class="pull-left">' + values[i] + '&nbsp;</span>'
                    }
                    $('#status2').html(def),

                    document.getElementById('IdSucursalDestino').value = values
                },
                updateNodeTitle: function (node, title) {
                    return '[' + node.attr('data-id') + '] ' + title + ' (' + node.attr('data-level') + ')'
                }
            })
        })
    </script>
</body>



