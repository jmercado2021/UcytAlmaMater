@model List<BlackSys.Models.W_ListarClientesIndex_Result>

                      <head>
                          <meta charset="utf-8">
                          <meta name="viewport" content="width=device-width, initial-scale=1">
                          @*Neccesarios para Exportar Js*@
                          <script src="~/assets/js/popper.min.js"></script>
                          <link href="~/assets/Exportar Js/tableexport.css" rel="stylesheet" />
                          <link href="~/Content/DynaTables/jquery.dynatable.css" rel="stylesheet" />
                         
                          <script src="~/Content/DynaTables/jquery.dynatableSinBuscador.js"></script>
                      </head>


<div class="row">

    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover dt-responsive" id="my-tableDino23" cellspacing="0">

            <thead>
                <tr>
                    <th>
                       Id Cliente
                    </th>
                    <th>
                      Nombre Cliente
                    </th>
                    <th>
                       Telefono
                    </th>
                    <th>
                       Identificacion
                    </th>
                    <th>
                      Correo Electronico
                    </th>
                    <th>
                      Tipo Cliente
                    </th>
                    <th>
                        Accion
                    </th>
                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="numero">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td class="numero">
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td class="numero">
                            @Html.DisplayFor(modelItem => item.Telefono1)
                        </td>
                        <td class="numero">
                            @Html.DisplayFor(modelItem => item.Cedula)
                        </td>
                        <td class="numero">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td class="numero">
                            @Html.DisplayFor(modelItem => item.Nombre_TipoCliente)
                        </td>
                        <td class="numero">
                            @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                            @Html.ActionLink("Detalles", "DetallarCliente", new {  Id = item.Id}) |
                            @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                        </td>
                    </tr>
                }

            </tbody>




        </table>
    </div>


</div>

<script>
    document.querySelector("#buscar").onkeyup = function () {
        $TableFilter("#my-tableDino23", this.value);
    }

    $TableFilter = function (id, value) {
        var rows = document.querySelectorAll(id + ' tbody tr');

        for (var i = 0; i < rows.length; i++) {
            var showRow = false;

            var row = rows[i];
            row.style.display = 'none';

            for (var x = 0; x < row.childElementCount; x++) {
                if (row.children[x].textContent.toLowerCase().indexOf(value.toLowerCase().trim()) > -1) {
                    showRow = true;
                    break;
                }
            }

            if (showRow) {
                row.style.display = null;
            }
        }
    }
</script>


<script>

    $('#my-tableDino23').dynatable({
        table: {
            defaultColumnIdStyle: 'dashed'
        }
    });


</script>
