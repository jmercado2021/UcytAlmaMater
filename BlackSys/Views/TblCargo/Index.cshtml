@model IEnumerable<MiPrimerProyectoMVC.Model.TblCargo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLte.cshtml";
}
<br />
<div class="container">

    <div class="panel panel-primary" style="width:750px;margin:0px auto">


        <div class="panel-heading" id="mypanelId">
            Listado de Cargos @Html.ActionLink("Crear nuevo ", "Create", null, new { @class = "btn btn-primary btn-large" })
            @*<div  class="btn btn-secondary ">
                    @Html.ActionLink("Crear Nuevo", "Create")

                </div>*@

        </div>
        <div class="panel-body">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Codigo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Fecha)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Activo)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Codigo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Fecha)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Activo)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" }) |
                            @Html.ActionLink("Ver detalles", "Details", new { id = item.Id }, new { @class = "btn btn-warning" })
                            @*@Html.ActionLink("Desactivar", "Delete", new { id = item.Id }, new { @class = "btn btn-warning" })*@

                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
